    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>Step-In : Back Office</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">

        <%= stylesheet_link_tag "bootstrap.min" %>
        <style>
            body {
                padding-top: 60px;
                padding-bottom: 40px;
            }
        </style>
        <%= stylesheet_link_tag "bootstrap-responsive.min", "main" %>

        <%= javascript_include_tag "modernizr" %>
        <%= javascript_include_tag "application" %>
        <%= javascript_include_tag :all %>
        <%= csrf_meta_tag %>
    </head>
    <body>
        <!--[if lt IE 7]>
            <p class="chromeframe">You are using an outdated browser. <a href="http://browsehappy.com/">Upgrade your browser today</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to better experience this site.</p>
        <![endif]-->

        <!-- This code is taken from http://twitter.github.com/bootstrap/examples/hero.html -->

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="#"><%= image_tag("logo-nude.png", :size => "120x30", :alt => "Step-In Back Office") %></a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li class="active"><a href="#">Statistiques</a></li>
                            <li><a href="#about">Temps-Réel</a></li>
                            <li><a href="#contact">Base de données</a></li>
                            <!--
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Action</a></li>
                                    <li><a href="#">Another action</a></li>
                                    <li><a href="#">Something else here</a></li>
                                    <li class="divider"></li>
                                    <li class="nav-header">Nav header</li>
                                    <li><a href="#">Separated link</a></li>
                                    <li><a href="#">One more separated link</a></li>
                                </ul>
                            </li>
                            -->
                        </ul>
                        <div class="navbar-form pull-right">
                            <% if signed_in? %>
                                <li><%= button_to "Déconnexion", signout_path, :method => :delete, :class => "btn" %></li>
                            <% else %>
                                <%= form_for(:session, :url => sessions_path) do |f| %>
                                    <%= f.text_field :email, :class => "span2", :placeholder => "Email" %>
                                    <%= f.text_field :password, :class => "span2", :placeholder => "Mot de passe" %>
                                    <%= f.submit "Connexion", :class => "btn" %>
                                <% end %>
                            <% end %>
                        </div>
                        <!--
                        <input class="span2" type="text" placeholder="Email">
                            <input class="span2" type="password" placeholder="Password">
                            <button type="submit" class="btn">Sign in</button>
                        </form>
                        -->
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>

        <div class="container">
            <% flash.each do |key, value| %>
                <div class="alert error"><%= value %></div>
            <% end %>

            <div id="content">
                <%= yield %>
            </div>

            <hr>

            <footer>
                <p>&copy; Step-In 2012</p>
            </footer>

        </div> <!-- /container -->

        <%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js" %>
        <%= javascript_include_tag "jquery-1.8.2.min" %>

        <%= javascript_include_tag "bootstrap.min" %>
        <%= javascript_include_tag "main" %>
        <%= csrf_meta_tag %>
        <script>
            var _gaq=[['_setAccount','UA-XXXXX-X'],['_trackPageview']];
            (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
            g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
            s.parentNode.insertBefore(g,s)}(document,'script'));
        </script>
    </body>
</html>
