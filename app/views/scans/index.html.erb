<h1>Listing scans</h1>

<table class="table table-striped table-hover">
  <tr>
    <th/>
    <th width="20%">Title</th>
    <th width="30%">Desc</th>
    <th>Code</th>
    <th>Points</th>
    <th></th>
  </tr>

<% @scans.each do |scan| %>
  <tr>
    <td>
    <% if scan.photo0 && scan.photo0.m_url then %>
        <%= image_tag scan.photo0.m_url, :class => "img-polaroid", :size => "80x80" %>
    <% else %>
        <img src="broken.jpeg" class="img-polaroid" width="80" height="80"/>
    <% end %>
    </td>
    <td><%= scan.title %></td>
    <td><%= scan.desc %></td>
    <td><%= scan.code %></td>
    <td><%= scan.points %></td>
    <td>
        <div class="btn-group">
            <%= link_to content_tag(:i, "", :class => "icon-barcode icon-white") + " Consulter", scan, :class => "btn btn-primary" %>)
            <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li><%= link_to content_tag(:i, "", :class=>"icon-pencil") + " Editer", edit_scan_path(scan)%></li>
                <li><%= link_to content_tag(:i, "", :class=>"icon-trash") + " Supprimer", scan, :method => :delete, :confirm => 'Are you sure?' %></li>
            </ul>
        </div>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Scan', new_scan_path %>
