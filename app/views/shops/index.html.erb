<h1>Boutiques</h1>

<table class="table table-striped table-hover">
  <tr>
    <th/>
    <th>Name</th>
    <th>Address</th>
    <th>Zipcode</th>
    <th>City</th>
    <th>Location</th>
    <th>Beancode</th>
    <th>Points</th>
    <th></th>
  </tr>

<% @shops.each do |shop| %>
  <tr>
    <td>
    <% if shop.photo0 && shop.photo0.m_url then %>
        <%= image_tag shop.photo0.m_url, :class => "img-polaroid", :size => "80x80" %>
    <% else %>
        <img src="broken.jpeg" class="img-polaroid" width="80" height="80"/>
    <% end %>
    </td>
    <td><%= shop.name %></td>
    <td><%= shop.address %></td>
    <td><%= shop.zipcode %></td>
    <td><%= shop.city %></td>
    <td><%= shop.location.lat.to_s + ', ' + shop.location.lng.to_s %></td>
    <td><%= shop.beancode %></td>
    <td><%= shop.points.to_json %></td>
    <td>
        <div class="btn-group">
            <%= link_to content_tag(:i, "", :class => "icon-home icon-white") + " Consulter", shop, :class => "btn btn-primary" %>)
            <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li><%= link_to content_tag(:i, "", :class=>"icon-pencil") + " Editer", edit_shop_path(shop)%></li>
                <li><%= link_to content_tag(:i, "", :class=>"icon-trash") + " Supprimer", shop, :method => :delete, :confirm => 'Are you sure?' %></li>
            </ul>
        </div>
    </td>
  </tr>
<% end %>
</table>

<br />

